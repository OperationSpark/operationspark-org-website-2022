# Dev shop contact responses
DEV_SHOP_INQUIRIES_SHEET_ID='[FILL_ME_IN: GOOGLE_SPREADSHEET_ID]'

DEV_SHOP_CONTACT_SLACK_CHANNEL_ID='[FILL_ME_IN: SLACK_CHANNEL_ID]'

# Wufoo details (Used for contact form)
WUFOO_HOST='[FILL_ME_IN: WUFOO_HOST_NAME]'
WUFOO_CONTACT_FORM_ID='[FILL_ME_IN: WUFOO_CONTACT_FORM_ID]'

