{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./src/__tests__"]
}
